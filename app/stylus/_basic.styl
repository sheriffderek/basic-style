
// box-model reset
html
	box-sizing: border-box

*, *:before, *:after
	box-sizing: inherit

// clear-fix
clear-fix()
	&:after
		content: ''
		display: table
		clear: 	both

// body
body
	clear-fix()
	-webkit-tap-highlight-color: rgba(0,0,0,0)
	-webkit-tap-highlight-color: transparent
	// set these specifically within scope / or not...

// major blocks
block()
	display: block
	width: 100%
	float: left
	clear-fix()

.container, .block
	block()

// lists of "blocks"
remove-list-style()
	list-style: none
	margin: 0
	padding: 0

block-list()
	container()
	remove-list-style()
	
.block-list
	block-list()
	> li
		block()

// center big blocks... like .inner-w
center-block()
	float: none
	margin-left: auto
	margin-right: auto

// that invisible column
.inner-w
	center-block()
	max-width: 800px // arbitrary starting point : override in _style
	clear-fix()

full-width() 
	max-width: 100%
	padding: 0

// responsive image wrapper
image-w() 
	img, svg, iframe, video, canvas
		display: block
		width: 100%
		height: auto

.image-w
	image-w()

