
// set temp wireframes true/false
wire-frames(wire-frames-on = false)
	if wire-frames-on
		border: 1px solid rgba(0,0,0,.05)
		padding: ($padding/2)
		.container
			margin-bottom: $padding
			border: 1px solid rgba(0,0,0,.1)

* // set temp frames to everything
	wire-frames()

// simplified position syntax
static()
	position: static
	
relative()
	position: relative
	
absolute()
	position: absolute

fixed()
	position: fixed

// vertically align buddy elements
balance()
	float: none // to be *sure there is no float
	display: inline-block
	vertical-align: middle

balance-buddy($position, $height = 0)
  //
	if $position == before
		&:before
			balance()
			content: ''
			width: 0
			height: $height
			overflow: hidden
	else if $position == after
		&:after
			balance()
			content: ''
			width: 0
			height: $height
			overflow: hidden
	else //
		//

hide()
  	display: none

show()
	display: block

// absolutly center
center-center()
	float: none
	absolute()
	margin: auto
	top: 50%
	left: 50%
	transform: translate(-50%,-50%)

// simple widths
split-in($number-of-parts)
	width: (1 / $number-of-parts * 100%)

// minimum area for "tap" interaction
$tap-size = 44px
tap-area()
	min-width: $tap-size
	min-height: $tap-size
	@media break-point-2
		min-width: auto
		min-height: auto

// accesibly hidden
// http://developer.yahoo.com/blogs/ydn/posts/2012/10/clip-your-hidden-content-for-better-accessibility
.visually-hidden 
	position: absolute !important
	clip: rect(1px, 1px, 1px, 1px)
	padding: 0 !important
	border: 0 !important
	height: 1px !important
	width: 1px !important
	overflow: hidden
    
body:hover 
	.visually-hidden 
		a, input, button
			display: none !important
			

