
// basic example structure
$colorz = rgba(0,0,0,.04)
$widthz = 2px
$stylez = dotted

// border(colour)
// 	border $widthz $styles colour

.basic
	.site-title
		large-icons()
		* //
			balance()

basic-example()
	padding: $pad
	background: $colorz

.container.basic-example
	basic-example()
	border: 1px $stylez $color
	span //
		border: 1px $stylez $color
		color: $color
	.inner-w
		basic-example()
		margin-: ($pad*2)
		border: 1px $stylez $highlight
		span //
			border: 1px $stylez $highlight
			color: $highlight
	.block-list
		basic-example()
		border: 1px $stylez $black
		span //
			border: 1px $stylez $black
			color: $black
	.block
		basic-example()
		margin-bottom: ($pad*5)
		border: 1px $stylez $alternate
		span //
			border: 1px $stylez $alternate
			color: $alternate
	.image-w
		relative()
		basic-example()
		padding: 0
		margin-bottom: ($pad*2)
		border: 1px $stylez $color
		span //
			absolute()
			top: 0
			left: ($pad/2)
			transform: translate( $pad, -50% )
			border: 1px $stylez $color
			color: $color
	.text-w
		basic-example()
		border: 1px $stylez $color
		span //
			border: 1px $stylez $color
			color: $color
	span //
		display: inline-block
		transform: translate( ($pad/2), -83%)
		background: $gray-lighter
		font-size: 12px
		padding: .5rem
	.column
		//
		@media $break-point-2
			&:nth-of-type(1)
				width: 64%
				float: left
			&:nth-of-type(2)
				width: 34%
				float: right

// swatches
.swatches
	padding-bottom: 30px
	div //
		width: 100%
		float: left
		padding: .3rem
		text-shadow: 0 0 2px alpha(white, .5)
		transition: .3s padding ease-in

		@media $break-point-1
			padding: .6rem
			split-in(3)
			
		@media $break-point-2
			padding: .9rem

		@media $break-point-3
			split-in(6)

		&.black
			background: $black
		&.white
			background: $white
		&.gray-dark
			background: $gray-dark
		&.gray
			background: $gray
		&.gray-light
			background: $gray-light
		&.gray-lighter
			background: $gray-lighter
		&.color-light
			background: $color-light
		&.color
			background: $color
		&.color-dark
			background: $color-dark
		&.highlight-light
			background: $highlight-light
		&.highlight
			background: $highlight
		&.highlight-dark
			background: $highlight-dark
		&.alternate-light
			background: $alternate-light
		&.alternate
			background: $alternate
		&.alternate-dark
			background: $alternate-dark
			
.buttons
	padding-bottom: $pad*4
	.inner-w
		display: flex
		flex-direction: row
		.button:not(:last-of-type)
			margin-right: $pad
