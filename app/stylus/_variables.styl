
// colors
$black 		= #222222
$white 		= #efefef
$gray 		= gray

$color 		= #66ccff
$highlight 	= #ff6666 
$alternate 	= #ffff66

$light 		= red
$dark 		= blue

// shade
shade($color, $percent)
	mix($black, $color, $percent)

// tint
tint($color, $percent)
	mix($white, $color, $percent)

// variations
$gray-light 		= tint($gray, 50%)
$gray-dark 			= shade($gray, 50%)
$gray-lighter 		= tint($gray-light, 80%)

$color-light 		= tint($color, 50%)
$color-dark 		= shade($color, 50%)

$highlight-light 	= tint($highlight, 50%)
$highlight-dark 	= shade($highlight, 25%)

$alternate-light 	= tint($alternate, 50%)
$alternate-dark 	= shade($alternate, 25%)

// for mini theme stuffs
$light-light 		= yellow
$light-dark			= orange

$dark-light 		= purple
$dark-dark 			= lightblue

// layout
$pad 			= 0.6rem
$gutter  	= $pad

$corner 		= $pad*.4

$invisible 	= transparent












