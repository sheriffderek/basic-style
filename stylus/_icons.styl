
// base icons styles
[class^="icon-"], [class*=" icon-"]
	display inline-block
	fill currentColor

// icon patterns
$extra-small-icon-size = 12px
extra-small-icon()
	width $extra-small-icon-size
	height $extra-small-icon-size

$small-icon-size = 18px
small-icon()
	width $small-icon-size
	height $small-icon-size

$standard-icon-size = 25px
.icon-x
	width $standard-icon-size
	height $standard-icon-size
standard-icon()
	width $standard-icon-size
	height $standard-icon-size

$medium-icon-size = 35px
medium-icon()
	width $medium-icon-size
	height $medium-icon-size

$large-icon-size = 60px
large-icon()
	width $large-icon-size
	height $large-icon-size

$extra-large-icon-size = 90px
extra-large-icon()
	width $extra-large-icon-size
	height $extra-large-icon-size



